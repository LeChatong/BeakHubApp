<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    android:layout_marginBottom="5dp"
    android:id="@+id/card_search"
    card_view:cardBackgroundColor="#FFFF"
    card_view:cardCornerRadius="0dp"
    card_view:contentPadding="0dp"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_job_search"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_marginStart="@dimen/text_size_v2"
                android:layout_marginTop="@dimen/text_size_v2"
                android:layout_marginEnd="0dp"
                android:textSize="20sp"
                android:textColor="@color/bgBeakHub"
                android:text="@string/bhJob" />
            <TextView
                android:id="@+id/tv_category_search"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="@dimen/text_size_v2"
                android:layout_marginEnd="@dimen/text_size_v2"
                android:text="@string/category"
                android:gravity="start|center_vertical"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_user"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginStart="@dimen/text_size_v2"
                android:layout_marginTop="1dp"
                android:textSize="@dimen/text_size"
                android:textColor="@color/bhDarkGrey"
                android:text="@string/lechatong" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_desc_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/text_size_v2"
                android:layout_marginTop="@dimen/text_size_v1"
                android:layout_marginEnd="@dimen/text_size_v2"
                android:layout_marginBottom="@dimen/text_size_v1"
                android:gravity="top"
                android:text="@string/description" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--<ImageView
                android:id="@+id/img_like"
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/ic_star_border_bh_24dp"/>-->
            <TextView
                android:id="@+id/tv_search_nb_like"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginStart="@dimen/text_size_v2"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="@dimen/text_size_v2"
                android:layout_marginBottom="@dimen/text_size_v2"
                android:textColor="@color/bgBeakHub"
                android:text="@string/example_likes"/>
            <!--<ImageView
                android:id="@+id/img_comment"
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/ic_textsms_bh_24dp"/>-->
            <TextView
                android:id="@+id/tv_search_nb_comment"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="@dimen/text_size_v2"
                android:layout_marginBottom="@dimen/text_size_v2"
                android:textColor="@color/bgBeakHub"
                android:text="@string/example_opinion"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>