<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_marginTop="0dp"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    android:layout_marginBottom="1dp"
    android:id="@+id/card_notif"
    card_view:cardBackgroundColor="#FFFF"
    card_view:cardCornerRadius="0dp"
    card_view:contentPadding="0dp"
    android:foreground="?selectableItemBackground"
    app:ignore="NamespaceTypo"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/ivNotifPP"
            android:contentDescription="@string/nav_header_desc"
            android:layout_height="70dp"
            android:layout_width="70dp"
            app:srcCompat="@mipmap/ic_launcher_round" />
        <TextView
            android:id="@+id/tvNotifText"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_v2"
            android:text="@string/copyright"
            android:paddingStart="@dimen/text_size_v6"
            android:paddingEnd="@dimen/text_size_v6"
            android:paddingTop="@dimen/text_size_v6"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvDuring"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/text_size_v6"
                android:paddingEnd="@dimen/text_size_v6"
                android:paddingTop="@dimen/text_size_v6"
                android:textSize="@dimen/text_size_v6"
                android:textColor="@color/bgBeakHub"
                android:text="6h"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>