<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bgBeakHub"
    android:id="@+id/register_user_layout"
    tools:context=".Activities.RegisterUserActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/beak_solo"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_save_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/saveuser"
                android:textAlignment="center"
                android:textSize="40sp"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/White"
                android:layout_marginTop="60dp"/>

            <TextView
                android:id="@+id/tv_save_user_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save_user_info"
                android:textAlignment="textStart"
                android:textSize="20sp"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/White"
                android:layout_marginTop="5dp"/>

            <EditText
                android:id="@+id/et_last_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/last_name"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:padding="15dp"
                android:inputType="textPersonName"
                android:textColor="@color/White"
                android:background="@drawable/et_custom"
                android:textColorHint="@color/White"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_first_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/first_name"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                android:padding="15dp"
                android:inputType="textPersonName"
                android:textColor="@color/White"
                android:background="@drawable/et_custom"
                android:textColorHint="@color/White"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/e_mail"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:padding="15dp"
                android:inputType="textEmailAddress"
                android:textColor="@color/White"
                android:background="@drawable/et_custom"
                android:textColorHint="@color/White"
                android:textSize="15sp"/>

            <!--<Spinner
                android:id="@+id/spinner_sexe"
                android:layout_width="match_parent"
                android:hint="@string/sexe"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:padding="15dp"
                android:background="@drawable/et_custom"
                android:textColorHint="@color/White"
                android:textSize="15sp"
                android:entries="@array/sexe_arrays"
                android:prompt="@string/sexe_prompt"/>-->

            <!--<EditText
                android:id="@+id/et_birth_date"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:padding="15dp"
                android:inputType="date"
                android:background="@drawable/et_custom"
                android:textColorHint="@color/White"
                android:textSize="15sp"
                android:hint="@string/birth_date" />-->

            <EditText
                android:id="@+id/et_phone_number"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:padding="15dp"
                android:inputType="phone"
                android:hint="@string/phone_number"
                android:textColor="@color/White"
                android:background="@drawable/et_custom"
                android:textColorHint="@color/White"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/btn_save_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/btn_custom"
                android:text="@string/register"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>