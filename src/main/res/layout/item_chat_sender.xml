<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/margin">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView android:id="@+id/tvUserComment"
                android:textColor="@color/bgBeakHub"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:text="@string/app_name"/>
            <TextView
                android:id="@+id/tvComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_circle_theme"
                android:gravity="center|end"
                android:minLines="1"
                android:paddingBottom="@dimen/margin"
                android:paddingLeft="@dimen/margin_x2"
                android:paddingRight="@dimen/margin_x2"
                android:paddingTop="@dimen/margin"
                android:text="@string/app_name" />

            <TextView
                android:id="@+id/tvTime"
                style="@style/AppTheme.TextView_Sub_Title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minLines="1"
                android:fontFamily="casual"
                android:textSize="@dimen/text_size"
                android:text="@string/app_name"/>

        </LinearLayout>

        <!--<androidx.appcompat.widget.AppCompatImageView
            android:id="@id/image_view"
            android:layout_width="@dimen/icon_size_x6"
            android:layout_height="@dimen/icon_size_x6"
            android:layout_margin="@dimen/margin"
            app:srcCompat="@drawable/ic_vector_chat" />-->


    </LinearLayout>
</RelativeLayout>